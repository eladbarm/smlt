<mvc:View controllerName="sap.ui.demo.wt.controller.App" displayBlock="true" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<App class="sapUiDemoWT">
		<pages>
			<Page title="{i18n>homePageTitle}">
				<headerContent>
					<Button 
					    icon="sap-icon://hello-world" 
					    press="onOpenDialog"/>
				</headerContent>
				<content>
					<mvc:XMLView viewName="sap.ui.demo.wt.view.HelloPanel"/>
					<mvc:XMLView viewName="sap.ui.demo.wt.view.InvoiceList"/>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>